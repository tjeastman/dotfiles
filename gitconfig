[include]
	path = .gitconfig.user
[core]
	autocrlf = input
	safecrlf = true
	editor = emacs
	excludesfile = ~/.gitignore.global
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[color]
	ui = true
[push]
	default = simple
